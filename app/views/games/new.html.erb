<h1>New game</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
    <p><%= letter.capitalize %></p>
  <% end %>
</div>

<form action="/score" data-turbo="false"class="d-flex flex-row mb-2 align-items-end">
    <div >
      <label for="inputWord" class="form-label">What is the longest world you can find?</label>
      <input type="text" name="word" id="inputWord" class="form-control w-100">
      <%= hidden_field_tag :grid, @letters.join %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </div>
    <div >
      <input type="submit" value="Valid!" class="btn btn-primary mb-0">
    </div>
  </form>
